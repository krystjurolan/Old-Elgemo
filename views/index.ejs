          height: $p.data("height")
        });
        $detail
          .removeClass("ready")
          .delay(500)
          .queue(function (next) {
            $(this).hide();
            $poster.removeClass("active");
            next();
          });
      }
      
        $close.click(close);
      $("body").click(function (e) {
