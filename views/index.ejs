        var $play = $(".play"),
        $detail = $(".detail"),
        $movie = $(".movie", $detail),
        $close = $(".close");
      
      $(".movies .movie").click(function () {
        $movie.html($(this).html());
        $play.appendTo($movie);
      
        $poster = $(".poster", this).addClass("active");
      
        $(".poster", $detail)
          .css({
            top: $poster.position().top,
            left: $poster.position().left,
            width: $poster.width(),
            height: $poster.height()
          })
          .data({
            top: $poster.position().top,
            left: $poster.position().left,
            width: $poster.width(),
            height: $poster.height()
          });
      
        $detail.show();
      
        $(".poster", $detail)
          .delay(10)
          .queue(function (next) {
            $detail.addClass("ready");
      
            next();
          })
          .delay(100)
          .queue(function (next) {
            $(this).css({
              top: "-10%",
              left: "-6%",
              width: 266,
              height: 400
            });
            next();
          });
      });
      
      /*--------------------
      Close
